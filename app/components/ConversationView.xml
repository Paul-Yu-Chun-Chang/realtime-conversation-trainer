        <Label text="{{ currentText }}" textWrap="true" 
               class="text-lg mb-2" />
        <Label text="{{ translatedText }}" textWrap="true" 
               class="text-lg text-blue-600 mb-2" />
        <Label text="{{ suggestion }}" textWrap="true" 
               class="text-lg text-green-600" />
    </StackLayout>
</ScrollView>